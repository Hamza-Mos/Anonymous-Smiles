<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-smile-beam fa-6x"></i>
    <h1 class="display-3">Welcome to the Smile Vault!</h1>

    <%usersWithSecrets.forEach((user) => { %>

        <%user.secrets.forEach((secret) => { %>
            <p class="secret-text"><%=secret%></p>
        <%})%>
    <%})%>
    <hr>
    
    <a class="btn btn-primary btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-success btn-lg" href="/submit" role="button">Provide a Smile</a>
  </div>
</div>

<%- include('partials/footer') %>
